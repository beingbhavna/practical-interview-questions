import {Pipe, PipeTransform} from '@angular/core';

@Pipe({
    name:'filterPipe'
})
export class FilterClassName implements PipeTransform{
    transform(value:any[],searchText:string,propertyName:string):any[]{
        if(!value || !searchText || !propertyName){
            return value;
        }
        searchText = searchText.toLowerCase();
        return value.filter(item =>{
            if(item[propertyName]){
                return item[propertyName].toLowerCase().includes(searchText);
            }
            return false;
        });
    }
}
